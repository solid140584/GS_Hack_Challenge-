<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azulItalica">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etMomento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="80dp"
                android:padding="10dp"
                android:background="@android:color/white"
                android:hint="Describe tu momento Italika"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMomento"
                >

            <ImageView
                android:id="@+id/imgGaleria"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gallery"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/imgGaleria"
                android:src="@drawable/ic_add_photo"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/imgMiniatura"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btnMomento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MomentoButton"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>