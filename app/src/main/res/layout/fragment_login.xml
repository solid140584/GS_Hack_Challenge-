<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.Login.FragmentLogin">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/italika"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"/>

    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="12.5dp"
        android:inputType="text"
        android:hint="@string/etUserText"
        android:visibility="visible"
        android:nextFocusForward="@+id/etPass"
        android:layout_below="@+id/ivLogo"
        android:textColorLink="@color/gris"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="12.5dp"
        android:hint="@string/etPassText"
        android:visibility="visible"
        android:inputType="textPassword"
        android:layout_below="@id/etUser"
        android:textColorLink="@color/gris"/>

    <Button
        android:id="@+id/btnAccess"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_button"
        android:layout_below="@+id/etPass"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:elevation="4dp"
        android:textAllCaps="false"
        android:text="@string/initSession"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvRegistrate"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAccess"
        android:layout_marginTop="20dp"/>

</RelativeLayout>